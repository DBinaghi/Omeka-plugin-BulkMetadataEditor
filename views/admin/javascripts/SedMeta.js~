
jQuery(document).ready(function() {
   jQuery("#select-item-all").on("click",function(){
       jQuery("#bulk-metadata-editor-select-items").hide());
   });
   jQuery("#select-item-some").on("click",function(){
       jQuery("#bulk-metadata-editor-select-items").show();
   });
   jQuery("#select-field-all").on("click",function(){
       jQuery("#bulk-metadata-editor-select-fields").hide();
   });
   jQuery("#select-field-some").on("click",function(){
       jQuery("#bulk-metadata-editor-select-fields").show();
   });
});

